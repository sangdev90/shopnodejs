<% include ./header_admin.ejs %>

<form action="/admin/add-user" method="POST" role="form">
<legend>Add User</legend>
<div class="form-group">
<label for="">Username: </label>
<input type="text" class="form-control" placeholder="username" name="txtName">
</div>
<div class="form-group">
<label for="">Email: </label>
<input type="email" class="form-control" placeholder="email" name="txtEmail">
</div>
<div class="form-group">
<label for="">Password: </label>
<input type="password" class="form-control" placeholder="password" name="txtPass">
</div>
<div class="form-group">
<label for="">Re-Password: </label>
<input type="password" class="form-control" placeholder="confirm password" name="txtRe-Pass">
</div>
<div class="form-group">
<label>Level</label>
<div class="radio">
<label>User
<input type="radio" name="numLevel"  value="0" checked="checked">
</label>
</div>
<div class="radio">
<label>Admin
<input type="radio" name="numLevel"  value="1">
</label>
</div>
</div>
<button type="submit" class="btn btn-primary">Add</button>
</form>

