<% include blocks/header.ejs %>
<link href="/stylesheets/chatbox.css" rel="stylesheet">
<% include blocks/navbar.ejs %>
<% include blocks/menu.ejs %>

<div class="container-fluid">
	<div class="row">
		<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
			<form action="/checkout" method="POST" role="form">
				<legend>Checkout</legend>
				<div class="form-group">
					<label for="">Fullname</label>
					<input type="text" class="form-control" name="txtFullname" placeholder="your name" value="hai hai">
				</div>
				<div class="form-group">
					<label for="">Email</label>
					<input type="email" class="form-control" name="txtEmail" placeholder="your email" value="hai@gmail.com">
				</div>
				<div class="form-group">
					<label for="">Phone</label>
					<input type="text" class="form-control" name="txtPhone" placeholder="your number phone" value="123456">
				</div>
				<div class="form-group">
					<label for="">Address</label>
					<textarea type="textarea" class="form-control" name="txtAddress" placeholder="your address">Quang nam > Da nang</textarea>
				</div>
				<div class="form-group">
					<label for="">Message</label>
					<textarea type="textarea" class="form-control" name="txtMsg" placeholder="send message">Good order !</textarea>
				</div>

				<button type="submit" class="btn btn-primary">Order</button>
			</form>
		</div>
		<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>index</th>
						<th>name</th>
						<th>quantity</th>
						<th>price</th>
						<th>total</th>
					</tr>
				</thead>
				<tbody>
					<% if(typeof cart !== undefined) {
						var index = 0;
						cart.forEach(function (value) { 
							index++; %>
							<tr>
							<td><%= index %></td>
							<td><%= value.item.name %></td>
							<td><%= value.quantity %></td>
							<td>$<%= value.item.price %>/item</td>
							<td>$<%= value.amount %></td>
							<% }); } %>
						</tr>
						<!-- footer order -->
						<% if(typeof cart !== undefined) {
							var amount = 0;
							var total = 0;
							cart.forEach(function (value) { 
								amount += value.amount;
							});
							total = amount + amount*10/100+15; %>
							<tr><td colspan="5">Amount: $<%= amount %></td></tr>
							<tr><td colspan="5">Tax: 10%</td></tr>
							<tr><td colspan="5">Shipping: $15</td></tr>
							<tr><td colspan="5">Total: $<%= total %></td></tr>
							<% } %>
						</tbody>
					</table>
				</div>
			</div>
		</div>

		<% include blocks/footer.ejs %>