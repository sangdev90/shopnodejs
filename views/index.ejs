<!-- begin:new-arrival -->
<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <h2>New Arrival <small>New products in this month</small></h2>
    </div>
  </div>
</div>

<div class="row product-container">
  <% data.forEach(function (item) { %>


    <div class="col-md-3 col-sm-3 col-xs-6">
    <div class="thumbnail product-item">
    <a href="/product-detail/<%= item.category_id %>/<%= item.id %>"><img alt="" src="/product/<%= item.image %>"></a>
    <div class="caption">
    <h5><%= item.name %></h5>
    <p>$ <%= item.price %></p>
    </div>
    </div>
    </div>
    <% }); %>
  </div>
  <!-- end:new-arrival -->
  

